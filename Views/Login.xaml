<?xml version="1.0" encoding="utf-8" ?>
<ContentPage xmlns="http://schemas.microsoft.com/dotnet/2021/maui"
             xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml"
             x:Class="practico4maui.Views.Login"
             Title=""
             BackgroundColor="#76b900">
    
    <VerticalStackLayout>
        <Image Source="logo.jpg" WidthRequest="200" HeightRequest="150" Margin="40,40,40,40"/>
        <Label 
            Text="Usuario:"
            TextColor="Black"
            VerticalOptions="Center" 
            HorizontalOptions="Center"
            Margin="25"
            />
        <Entry Placeholder="" WidthRequest="150" 
               x:Name="entusuario"/>
        
        <Label 
            Text="Contraseña:"
            TextColor="Black"
            VerticalOptions="Center" 
            HorizontalOptions="Center"
            Margin="25"/>
        
        <Entry Placeholder="" WidthRequest="150"
               x:Name="entcontraseña"/>
        
        <Button Text="Login" WidthRequest="125" HeightRequest="50" TextColor="White" BackgroundColor="Black" Margin="25,99,25,25" Clicked="Button_Clicked_1"/>
    </VerticalStackLayout>
</ContentPage>